# ============================================
# OPTIA BFF API - ENVIRONMENT CONFIGURATION
# ============================================

#  Environment Configuration
NODE_ENV=production
PORT=3000
HOST=0.0.0.0

#  Database Configuration (Required)
DATABASE_URL=postgresql://optia_user:your_password@localhost:5432/optia_app?schema=public&sslmode=require

#  Security Configuration (Required)
JWT_SECRET=your-256-bit-secret-key-here
API_KEY=your-api-key-for-admin-endpoints

#  WordPress Integration (Optional)
WP_BASE_URL=https://your-wordpress-site.com
WP_GRAPHQL_ENDPOINT=https://your-wordpress-site.com/graphql

#  WooCommerce Integration (Optional)
WOO_CONSUMER_KEY=ck_your_consumer_key_here
WOO_CONSUMER_SECRET=cs_your_consumer_secret_here
WOO_STORE_API_URL=https://your-wordpress-site.com/wp-json/wc/store/v1

#  Redis Caching (Optional)
REDIS_URL=redis://localhost:6379

#  Cache TTL Configuration (seconds)
CACHE_TTL_PRODUCTS=300
CACHE_TTL_PRODUCT_DETAIL=600
CACHE_TTL_CATEGORIES=900

#  Rate Limiting
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=1000

#  CORS Configuration
CORS_ORIGIN=https://your-frontend-domain.com

#  External Requests
REQUEST_TIMEOUT_MS=10000
PGPOOLSIZE=10
