# Node Environment
NODE_ENV=development
PORT=3000

# WordPress/WooCommerce Configuration
WP_BASE_URL=http://localhost/projects/woocommerce
WC_CONSUMER_KEY=your_consumer_key_here
WC_CONSUMER_SECRET=your_consumer_secret_here
WC_WEBHOOK_SECRET=your_webhook_secret_here

# Supabase Configuration (v2)
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your_anon_key_here
SUPABASE_SERVICE_ROLE_KEY=your_service_role_key_here

# Upstash Redis Configuration
UPSTASH_REDIS_REST_URL=https://your-redis.upstash.io
UPSTASH_REDIS_REST_TOKEN=your_redis_token_here

# Authentication & Security
JWT_SECRET=your_jwt_secret_32_chars_minimum_here
API_KEYS=admin_key_1,admin_key_2,frontend_key_1

# CORS Configuration
CORS_ORIGINS=http://localhost:3000,http://localhost:3001,https://yourdomain.com

# Caching Configuration (seconds)
CACHE_TTL_SECONDS=300
CACHE_STAMPEDE_TTL=60

# Rate Limiting
RATE_LIMIT_QPS=10
RATE_LIMIT_WINDOW=60

# Observability
LOG_LEVEL=info
ENABLE_TRACING=true
ENABLE_METRICS=true

# Optional: Monitoring
# SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id

# Feature Flags
ENABLE_OPTIMISTIC_UPDATES=true
ENABLE_CACHE_STAMPEDE_PROTECTION=true
ENABLE_WEBHOOK_VERIFICATION=true