# Environment
NODE_ENV=development
PORT=3000
HOST=0.0.0.0

# WordPress/WooCommerce Configuration
WP_GRAPHQL_ENDPOINT=https://your-site.com/graphql
WP_BASE_URL=https://your-site.com
WOO_CONSUMER_KEY=ck_your_consumer_key_here
WOO_CONSUMER_SECRET=cs_your_consumer_secret_here
WOO_STORE_API_URL=https://your-site.com/wp-json/wc/store/v1

# Redis Configuration
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=
REDIS_DB=0

# Security
JWT_SECRET=your-super-secret-jwt-key-here
CORS_ORIGIN=*

# Rate Limiting
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100

# Cache TTL (seconds)
CACHE_TTL_PRODUCTS=60
CACHE_TTL_PRODUCT_DETAIL=60

# Request Timeouts (milliseconds)
REQUEST_TIMEOUT_MS=10000

# Image Processing
IMAGE_QUALITY=80
IMAGE_MAX_WIDTH=1920
IMAGE_MAX_HEIGHT=1080
