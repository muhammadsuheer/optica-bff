{
  "name": "optia-bff",
  "version": "1.0.0",
  "description": "A high-performance, production-ready Backend for Frontend (BFF) built with Hono.js and Supabase that connects WordPress WooCommerce with modern frontend applications.",
  "type": "module",
  "main": "dist/index.js",
  "scripts": {
    "dev": "tsx --env-file=.env src/app/edge.ts",
    "dev:working": "tsx --env-file=.env src/app/working.ts",
    "sync:woo": "node scripts/sync-woocommerce.js",
    "build": "tsc",
    "start": "node dist/app/edge.js",
    "test": "vitest",
    "test:unit": "vitest run tests/unit",
    "test:integration": "vitest run tests/integration",
    "test:e2e": "playwright test",
    "lint": "eslint src --ext .ts,.tsx",
    "lint:fix": "eslint src --ext .ts,.tsx --fix",
    "format": "prettier --write \"src/**/*.{ts,tsx,json}\"",
    "type-check": "tsc --noEmit",
    "verify:edge": "node scripts/edge-compliance-scan.js",
    "vercel-build": "npm run build",
    "db:generate-types": "supabase gen types typescript --project-id YOUR_PROJECT_ID > src/types/database.ts",
    "postinstall": "npm run type-check"
  },
  "keywords": [
    "hono",
    "bff",
    "backend-for-frontend",
    "woocommerce",
    "supabase",
    "ecommerce",
    "api",
    "edge-functions",
    "vercel"
  ],
  "author": "Optia Development Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/muhammadsuheer/optia-bff.git"
  },
  "bugs": {
    "url": "https://github.com/muhammadsuheer/optia-bff/issues"
  },
  "homepage": "https://github.com/muhammadsuheer/optia-bff#readme",
  "dependencies": {
    "@hono/zod-validator": "^0.7.2",
    "@supabase/supabase-js": "^2.57.2",
    "@upstash/ratelimit": "^0.4.4",
    "@upstash/redis": "^1.35.3",
    "@woocommerce/woocommerce-rest-api": "^1.0.2",
    "hono": "^4.9.6",
    "isomorphic-dompurify": "^2.26.0",
    "jose": "^5.2.0",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@playwright/test": "^1.55.0",
    "@types/node": "^20.11.17",
    "@typescript-eslint/eslint-plugin": "^8.42.0",
    "@typescript-eslint/parser": "^8.42.0",
    "@vitest/ui": "^3.2.4",
    "eslint": "^9.34.0",
    "playwright": "^1.55.0",
    "prettier": "^3.6.2",
    "tsx": "^4.20.5",
    "typescript": "^5.8.3",
    "vitest": "^3.2.4"
  }
}
