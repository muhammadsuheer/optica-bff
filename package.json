{
  "name": "optica-app",
  "type": "module",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "dev:production": "NODE_ENV=production tsx watch src/productionServer.ts",
    "build": "prisma generate && tsc",
    "start": "prisma migrate deploy && node dist/src/index.js",
    "start:production": "prisma migrate deploy && node dist/src/productionServer.js",
    "postinstall": "prisma generate",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:performance": "jest --testNamePattern=\"performance\"",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "format": "prettier --write src/**/*.ts",
    "optimize:deps": "npm dedupe && npm prune",
    "audit:fix": "npm audit fix",
    "analyze:bundle": "npx tsc && du -sh dist/*",
    "sync:initial": "node sync-util.js initial",
    "sync:products": "node sync-util.js products", 
    "sync:categories": "node sync-util.js categories",
    "sync:orders": "node sync-util.js orders",
    "sync:customers": "node sync-util.js customers",
    "sync:status": "node sync-util.js status",
    "health:check": "curl -f http://localhost:3000/health || exit 1",
    "metrics": "curl -s http://localhost:3000/metrics",
    "docker:build": "docker build -t optica-bff .",
    "docker:run": "docker run -p 3000:3000 optica-bff",
    "docker:dev": "docker-compose up --build",
    "docker:prod": "docker-compose -f docker-compose.yml up -d",
    "docker:logs": "docker-compose logs -f",
    "docker:stop": "docker-compose down"
  },
  "dependencies": {
    "@hono/node-server": "^1.18.2",
    "@prisma/client": "^6.14.0",
    "@woocommerce/woocommerce-rest-api": "^1.0.2",
    "cors": "^2.8.5",
    "cross-fetch": "^4.1.0",
    "dotenv": "^17.2.1",
    "drizzle-kit": "^0.31.4",
    "drizzle-orm": "^0.44.4",
    "envalid": "^8.1.0",
    "graphql-request": "^7.2.0",
    "helmet": "^8.1.0",
    "hono": "^4.9.1",
    "ioredis": "^5.7.0",
    "lru-cache": "^11.1.0",
    "pg": "^8.16.3",
    "prisma": "^6.14.0",
    "prom-client": "^15.1.3",
    "rate-limiter-flexible": "^7.2.0",
    "sharp": "^0.34.3",
    "tslib": "^2.8.1",
    "undici": "^7.13.0",
    "zod": "^4.0.17"
  },
  "devDependencies": {
    "@types/jest": "^30.0.0",
    "@types/node": "^20.19.10",
    "@types/pg": "^8.15.5",
    "@typescript-eslint/eslint-plugin": "^8.39.1",
    "@typescript-eslint/parser": "^8.39.1",
    "eslint": "^9.33.0",
    "jest": "^30.0.5",
    "prettier": "^3.6.2",
    "ts-jest": "^29.4.1",
    "ts-node": "^10.9.2",
    "tsx": "^4.7.1",
    "typescript": "^5.9.2"
  }
}
