# Demo Environment - No WordPress Setup Required
# Use WooCommerce's demo API for quick testing

NODE_ENV=development

# Supabase Configuration (Update with your values)
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your_anon_key_here
SUPABASE_SERVICE_KEY=your_service_key_here

# Upstash Redis (Update with your values)
KV_REST_API_URL=https://your-redis.upstash.io
KV_REST_API_TOKEN=your_token_here

# WooCommerce Demo API (Ready to use!)
WC_API_URL=https://woocommerce.github.io/woocommerce-rest-api-docs/wp-json/wc/v3
WC_CONSUMER_KEY=demo_key
WC_CONSUMER_SECRET=demo_secret
WC_WEBHOOK_SECRET=demo_webhook_secret

# BFF API Configuration
API_KEYS=frontend_dev_key_12345,admin_dev_key_67890,mobile_dev_key_abcdef

# JWT Secret
JWT_SECRET=demo_jwt_secret_32_chars_minimum_dev

# CORS Configuration
CORS_ORIGINS=http://localhost:3000,http://localhost:3001
FRONTEND_URL=http://localhost:3000

# Rate Limiting (Development)
RATE_LIMIT_REQUESTS=10000
RATE_LIMIT_WINDOW=3600

# Cache Configuration (Development)
CACHE_TTL_PRODUCTS=300
CACHE_TTL_SEARCH=180
CACHE_TTL_CATEGORIES=600

# Debug Configuration
LOG_LEVEL=debug
DEBUG_MODE=true
ENABLE_METRICS=true
